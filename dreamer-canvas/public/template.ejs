<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= htmlWebpackPlugin.options.title %></title>
    <style>
        *{
            margin: 0;
            padding: 0;
            /*pointer-events: none;*/
            touch-action: none;
        }
        body{
            min-height: 100vh;
        }
        #canvas{
            width: 400px;
            height: 600px;
            position: absolute;
            transform: translate(-50%, -50%);
            left : 50%;
            top: 50%;
            background: #ee82ee;
        }
        #showImg{
            margin-top: 20px;
            margin-left: 20px;
            height: 80px;
        }
    </style>
</head>
<body>
    <img src="./logo.png" alt="" id = "showImg" >
    <div id="canvas"></div>
</body>

<script>
    const dom = document.getElementById( "showImg" )
    window.addEventListener( "dream_canvas_save_img", function(e){
        dom.src = e.detail.blobURL;
        console.log( dom )
    } )
    window.addEventListener( "dream_canvas_show_color", function(e){
        console.log( "显示颜色", e )
    } )
</script>

</html>